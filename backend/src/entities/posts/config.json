{
  "entityName": "posts",
  "collectionName": "posts",
  "apiKey": "slug",
  "permissions": {
    "get": "anyone",
    "create": "user",
    "update": "own",
    "delete": "own"
  },
  "attributes": {
    "user": {
      "type": "user",
      "required": true,
      "index": true,
      "readonly": true,
      "permissions": {
        "create": "system",
        "update": "system"
      }
    },
    "title": {
      "type": "string",
      "maxLength": 150,
      "required": true
    },
    "slug": {
      "type": "slug",
      "maxLength": 64,
      "required": true,
      "setFrom": "title",
      "suffix": {
        "type": "random",
        "chars": 8
      },
      "unique": true,
      "readonly": true
    },
    "body": {
      "type": "string",
      "required": true,
      "maxLength": 30000
    },
    "market": {
      "type": "ref",
      "entity": "markets",
      "required": true,
      "index": true,
      "readonly": true,
      "permissions": {
        "update": "system"
      }
    },
    "numberOfComments": {
      "type": "number",
      "default": 0,
      "permissions": {
        "create": "system",
        "update": "system"
      }
    },
    "votes": {
      "type": "number",
      "default": 0,
      "permissions": {
        "create": "system",
        "update": "system"
      }
    },
    "smImageUrl": {
      "type": "string"
    },
    "lgImageUrl": {
      "type": "string"
    }
  },
  "hooks": {
    "afterCreate": [
      {
        "action": "increment",
        "target": "this.user.numberOfPosts",
        "value": 1
      },
      {
        "action": "increment",
        "target": "this.market.numberOfPosts",
        "value": 1
      }
    ],
    "afterDelete": [
      {
        "action": "increment",
        "target": "this.user.numberOfPosts",
        "value": -1
      },
      {
        "action": "increment",
        "target": "this.market.numberOfPosts",
        "value": -1
      }
    ]
  },
  "joinAttributes": {
    "viewerVote": {
      "type": "findOne",
      "entity": "postVotes",
      "query": {
        "user": "{user.id}",
        "post": "{this.id}"
      }
    }
  }
}